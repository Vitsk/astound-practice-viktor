{{!-- Product page --}}

{{> header}}

<div class="container d-flex flex-row justify-content-around mt-4">
  <div class="product-img">
    <img 
      src="{{product.image}}"
      alt="product image" 
      id="variation-image"
      width="256" 
      height="256"
    >
  </div>

  <div class="product-description">
    <h3 id="variation-name" data-name="{{product.name}}">{{product.name}}</h3>
    <p id="variation-description">{{{product.longDescription}}}</p>

    <select class="form-select w-50 mb-3" id="select-variation" aria-label="Default select" data-masterid="{{product.master}}">
      {{#each product.variations}}
        <option value="{{pid}}">{{displayValue}}</option>
      {{/each}}
    </select>
    
    <label for="input-quantity" class="form-label">Quantity</label>
    <input type="number" id="input-quantity" class="form-control w-50" min="1" max="5" value="1">

    <h4 id="variation-price" data-price={{product.price}}>Price: {{product.price}}$</h4>

    <button id="add-cart-product" class="btn btn-success mt-4">Add to cart</button>
  </div>
</div>

<div class="alert alert-success alert-close" id="alert-event" role="alert">
  <b>The product has been added to the cart</b>
    <a href="/cart" class="btn btn-success float-end">
      <i class="bi bi-cart2"></i>
        Go to cart
    </a>
</div>

<script src="/js/compiled/product.js"></script>